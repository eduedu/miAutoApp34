<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="5dip" />
      <gradient
          android:startColor="@color/colGris3"
          android:centerColor="@color/colGris3"
          android:endColor="@color/colGris3"
                    />
    </shape>
  </item>


  <item
      android:id="@android:id/progress"
            >
    <clip>
      <shape>
        <corners
            android:radius="5dip" />
        <gradient
            android:startColor="@color/colAmarillo"
            android:endColor="@color/colAmarillo" />
      </shape>
    </clip>
  </item>

</layer-list>